<Window x:Class="PL.Call.ClosedCallsList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        Title="ClosedCallsList" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Height="32" Width="103" Content="Your Closed Calls:" Margin="41,21,656,381" Grid.RowSpan="2"/>
        <DataGrid Grid.Row="1"
        Margin="0,10,10,0"
        ItemsSource="{Binding Path=ClosedCallList}"
        IsReadOnly="True"
        Background="White" 
        BorderBrush="#CCCCCC" 
        BorderThickness="1"
        RowBackground="White" 
        AlternatingRowBackground="#F5F5F5"
        HorizontalGridLinesBrush="#E0E0E0"
        VerticalGridLinesBrush="#E0E0E0">
            
            <DataGrid.Columns>
                <!-- Name -->
                <DataGridTextColumn Binding="{Binding TypeOfCall}" Header="Type Of Call" Width="*" />

                <!-- CallsOutOfDate -->
                <DataGridTextColumn Binding="{Binding Address}" Header="Address" Width="*" />

                <!-- CallsCanceled -->
                <DataGridTextColumn Binding="{Binding OpeningTime}" Header="Opening Time" Width="*" />

                <!-- CallsDone -->
                <DataGridTextColumn Binding="{Binding ActualTreatmentEndTime}" Header="Treatment End Time" Width="*" />

                <!-- Delete button with Icon -->
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
