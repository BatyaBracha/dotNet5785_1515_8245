<Window x:Class="PL.Call.ClosedCallsList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        Title="ClosedCallsList" Height="450" Width="500"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Height="32" Content="Closed Calls History View" Margin="10,10,344,6"/>

        <!--<Label Content="Sort by Field:" 
            HorizontalAlignment="Center" VerticalAlignment="Top" 
            Margin="0,12,0,0" Foreground="#333333" Width="118"/>

        -->
        <!-- Sorting ComboBox -->
        <!--
        <ComboBox SelectedValue="{Binding CallFieldsFilter, Mode=TwoWay}" 
            ItemsSource="{Binding Source={StaticResource CallFieldsCollectionKey}, Path=CallFieldsFilter, Mode=TwoWay}" 
            SelectionChanged="comboBoxCallList_SelectionChanged" 
            Width="150" Margin="336,9,14,48" Background="White" BorderBrush="#CCCCCC" Height="30" RenderTransformOrigin="0.747,0.351"/>

        -->
        <!-- Label for Type of Call ComboBox -->
        <!--
        <Label Content="Filter by Call Type:" 
            HorizontalAlignment="Center" VerticalAlignment="Top" 
            Margin="0,50,0,0" Foreground="#333333" Width="114"/>

        <ComboBox SelectedValue="{Binding SelectedTypeOfCallFilter, Mode=TwoWay}" 
                  ItemsSource="{Binding  Source={StaticResource TypeOfCallCollectionKey}}" 
                  SelectionChanged="comboBoxCallList_SelectionChanged" 
                  Width="150" Background="White" BorderBrush="#CCCCCC" Height="30" Margin="336,47,14,10"/>-->
        <Label Content="Sort by Field:" 
            HorizontalAlignment="Left" VerticalAlignment="Top" 
            Margin="164,8,0,0" Foreground="#333333" Width="117"/>

        <!-- Sorting ComboBox -->
        <ComboBox SelectedValue="{Binding Path=CallFieldsFilter, Mode=TwoWay}" 
            ItemsSource="{Binding Source={StaticResource CallFieldsCollectionKey}}" 
            SelectionChanged="comboBoxCallList_SelectionChanged" 
            Width="150" Margin="339,11,11,46" Background="White" BorderBrush="#CCCCCC" Height="30" RenderTransformOrigin="0.747,0.351"/>

        <!-- Label for Type of Call ComboBox -->
        <Label Content="Filter by Call Type:" 
            HorizontalAlignment="Left" VerticalAlignment="Top" 
            Margin="164,46,0,0" Foreground="#333333" Width="115"/>

        <ComboBox SelectedValue="{Binding SelectedTypeOfCallFilter, Mode=TwoWay}" 
                  ItemsSource="{Binding Source={StaticResource TypeOfCallCollectionKey}}" 
                  SelectionChanged="comboBoxCallList_SelectionChanged" 
                  Width="150" Background="White" BorderBrush="#CCCCCC" Height="30" Margin="339,49,11,8"/>


        <DataGrid 
        Grid.Row="1"
        Margin="5,10,5,0"
        AutoGenerateColumns="False"
        ItemsSource="{Binding Path=ClosedCallList}"
        IsReadOnly="True"
        Background="White" 
        BorderBrush="#CCCCCC" 
        BorderThickness="1"
        RowBackground="White" 
        AlternatingRowBackground="#F5F5F5"
        HorizontalGridLinesBrush="#E0E0E0"
        VerticalGridLinesBrush="#E0E0E0">

            <DataGrid.Columns>
                <!-- Name -->
                <DataGridTextColumn Binding="{Binding TypeOfCall}" Header="Type Of Call" Width="*" />

                <!-- CallsOutOfDate -->
                <DataGridTextColumn Binding="{Binding Address}" Header="Address" Width="*" />

                <!-- CallsCanceled -->
                <DataGridTextColumn Binding="{Binding OpeningTime}" Header="Opening Time" Width="*" />

                <!-- CallsDone -->
                <DataGridTextColumn Binding="{Binding ActualTreatmentEndTime}" Header="Treatment End Time" Width="*" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
