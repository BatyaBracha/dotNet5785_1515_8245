<Window x:Class="PL.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="400"
        xmlns:helpers="clr-namespace:PL"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid>
        <Label Content="Welcome Back" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top" Width="196" Height="48" FontSize="29"/>
        <Label Content="Identity No." HorizontalAlignment="Left" Margin="102,106,0,0" VerticalAlignment="Top" Width="80"/>
        <TextBox HorizontalAlignment="Center" Text="{Binding Id, Mode=OneWayToSource}" Margin="0,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Height="35" TextChanged="TextBoxId_TextChanged"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="102,184,0,0" VerticalAlignment="Top" Width="80"/>
        <PasswordBox Width="196" Height="35" Margin="102,215,102,184" helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}" />
        <Button Content="Login as Admin" HorizontalAlignment="Center" Margin="0,287,0,0" VerticalAlignment="Top" Width="196" Height="35" Click="ButtonLoginAsAdmin_Click"/>
        <Button Content="Login as Volunteer" HorizontalAlignment="Center" Margin="0,337,0,0" VerticalAlignment="Top" Width="196" Height="35" Click="ButtonLoginAsVolunteer_Click"/>
    </Grid>
</Window>
