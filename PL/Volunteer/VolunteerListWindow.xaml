<Window x:Class="PL.Volunteer.VolunteerListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="VolunteerListWindow" Height="530" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <!--External Grid-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <!-- For the Internal, Upper Grid -->
            <RowDefinition Height="500*"/>
            <!-- For the DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- For the Add Button -->
        </Grid.RowDefinitions>

        <!-- Internal, Upper Grid -->
        <Grid Grid.Row="0" VerticalAlignment="Top" Height="74" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- For the Label -->
                <ColumnDefinition Width="*"/>
                <!-- For the ComboBox -->
            </Grid.ColumnDefinitions>

            <Label HorizontalAlignment="Center" VerticalAlignment="Top" Content="Volunteer Details" FontSize="20"/>
            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                <!-- Sorting ComboBox -->
                <ComboBox SelectedValue="{Binding Path=VolunteerFieldsFilter, Mode=TwoWay}" 
              ItemsSource="{Binding Source={StaticResource VolunteerFieldsCollectionKey}}" 
              SelectionChanged="comboBoxVolunteerList_SelectionChanged" 
              Width="150" Margin="5"/>
                <ComboBox SelectedValue="{Binding SelectedTypeOfCallFilter, Mode=TwoWay}" 
              ItemsSource="{Binding Source={StaticResource TypeOfCallCollectionKey}}" 
              SelectionChanged="comboBoxTypeOfCallFilter_SelectionChanged" 
              Width="150"/>

                <!-- Filtering ComboBox -->
            </StackPanel>
        </Grid>

        <!-- DataGrid -->
        <!--<DataGrid Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,10,0,0" ItemsSource="{Binding Path=VolunteerList}"/>-->
        <DataGrid Grid.Row="1"
          Margin="0,40,0,0"
          ItemsSource="{Binding Path=VolunteerList}"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          SelectedItem="{Binding SelectedVolunteer}"
          MouseDoubleClick="lsvVolunteersList_MouseDoubleClick">
            <DataGrid.Columns>
                <!-- Id -->
                <DataGridTextColumn Binding="{Binding Id}" Header="ID" Width="*"/>
                <!-- Name -->
                <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="*" />

                <!-- Active (CheckBox) -->
                <DataGridTemplateColumn Header="Active" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding Active}" IsEnabled="False" HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- CallsOutOfDate -->
                <DataGridTextColumn Binding="{Binding CallsOutOfDate}" Header="Out-of-date Calls" Width="*" />

                <!-- CallsCanceled -->
                <DataGridTextColumn Binding="{Binding CallsCanceled}" Header="Canceled Calls" Width="*" />

                <!-- CallsDone -->
                <DataGridTextColumn Binding="{Binding CallsDone}" Header="Done Calls" Width="*" />
                <!-- Delete button -->
                <DataGridTemplateColumn Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" Click="DeleteButton_Click" Tag="{Binding Id}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Add Button -->
        <Button Content="Add" Grid.Row="2" HorizontalAlignment="Center" Height="50" Width="100" Click="AddButton_Click"/>
    </Grid>
</Window>
